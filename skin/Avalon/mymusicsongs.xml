<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
<id>501</id>
<defaultcontrol>2</defaultcontrol>
<allowoverlay>yes</allowoverlay>
<define>#useSelectedFanart:Yes</define>
<controls>

<import>common.window.music.xml</import>
	
	
	<control>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<type>label</type>
		<id>1</id>
		  <posX>185</posX>
		  <posY>38</posY>
		  <width>500</width>
		<label>2</label>
		<textcolor>6aa5cb</textcolor>
		<font>font22</font>
		<visible>facadeview.list | facadeview.filmstrip | facadeview.smallicons | facadeview.largeicons</visible>
	</control>
	
<import>common.time.xml</import>

	<control>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
		<description>Poster shadow</description>
		<type>image</type>
		<id>1</id>
		<posX>423</posX>
		<posY>168</posY>
		<width>486</width>
		<height>487</height>
		<texture>list_music_shadow.png</texture>
		<visible>facadeview.list+Control.IsVisible(50)</visible>
	</control>
	
	<control>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
		<description>Poster glow</description>
		<type>image</type>
		<id>1</id>
		<posX>423</posX>
		<posY>168</posY>
		<width>486</width>
		<height>487</height>
		<texture>list_music_glow.png</texture>
		<visible>facadeview.list+Control.IsVisible(50)</visible>
	</control>
	
	<control>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
		<id>0</id>
		<type>image</type>
		<posX>490</posX>
		<posY>236</posY>
		<width>350</width>
		<height>350</height>
		<visible>facadeview.list+[!control.hasthumb(500)|string.equals(#selectedthumb,defaultFolderBig.png)]</visible>
		<texture flipY="true" diffuse="Thumb_Mask.png" mask="music_listview_mask.png">DefaultMyradioBig.png</texture>
	</control>
	
	<control>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
		<description>Cover Art</description>
		<type>image</type>
		<id>500</id>
		<posX>490</posX>
		<posY>236</posY>
		<width>350</width>
		<height>350</height>
		<texture flipY="true" diffuse="Thumb_Mask.png" mask="music_listview_mask.png">#selectedthumb</texture>
		<visible>facadeview.list+Control.IsVisible(50)+!string.equals(#selectedthumb,defaultFolderBig.png)</visible>
	</control>
	
		<!--            :: Thumb View ::            -->	

	
	
<import>mymusic.hiddenmenu.xml</import>	
<import>common.facade.music.xml</import>	
<import>common.overlay.xml</import>
	
</controls>
</window>