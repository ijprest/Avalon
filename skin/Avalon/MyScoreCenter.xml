    <control>
      <description>Current Results</description>
      <type>label</type>
      <posX>595</posX>
      <posY>875</posY>
      <align>left</align>
      <font>AvalonLight12</font>
      <textcolor>6aa5cb</textcolor>
      <label>#ScoreCenter.Source  |  #ScoreCenter.Results</label>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
    </control>
    <control>
        <id>10</id>
        <description>Scores</description>
        <type>listcontrol</type>
        <onright>40</onright>
		<posX>130</posX>
		<posY>156</posY>
        <width>385</width>
        <height>750</height>
        <font>font12</font>
        <textXOff>55</textXOff>
        <textYOff>14</textYOff>
        <IconXOff>5</IconXOff>
        <IconYOff>5</IconYOff>
        <textureFocus>button-focus.png</textureFocus>
        <textureNoFocus>button-nofocus.png</textureNoFocus>
        <textvisible2>no</textvisible2>
        <textvisible3>no</textvisible3>
        <spaceBetweenItems>2</spaceBetweenItems>
        <textureHeight>64</textureHeight>
        <keepaspectratio>yes</keepaspectratio>
        <spinPosX>10</spinPosX>
        <spinPosY>660</spinPosY>
        <dimColor>ffffffff</dimColor>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
    </control>

    <!-- This control defines the area and the format (font and color)
    in which the score will be displayed -->
    <control>
        <id>20</id>
        <description>Results</description>
        <type>textboxscrollup</type>
        <visible>yes</visible>
		<posX>745</posX>
		<posY>156</posY>
        <width>970</width>
        <height>650</height>
        <font>AvalonLight12</font>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
    </control>
    
    <control>
      <id>40</id>
      <description>Next Button</description>
      <type>button</type>
      <onleft>10</onleft>
      <onup>10</onup>
      <ondown>10</ondown>
      <posX>130</posX>
      <posY>700</posY>
      <label>Next</label>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
    </control>

