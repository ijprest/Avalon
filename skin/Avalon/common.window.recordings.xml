<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
<controls>

	<control>
		<description>default background</description>
		<type>image</type>
		<id>1</id>
		<posX>0</posX>
        <posY>0</posY>
		<width>1920</width>
		<height>1080</height>
		<texture>background.png</texture>
	</control>
	
		<!--            :: Overlays ::            -->	


	<control>
		<description>Viewport listview</description>
		<type>image</type>
		<id>1</id>
		<posX>0</posX>
		<posY>164</posY>
		<width>1893</width>
		<height>755</height>
		<texture>viewport_tv_recordings.png</texture>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
		<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>

	<control>
		<description>Selected item Label</description>
		<type>fadelabel</type>
		<id>1</id>
		<posX>74</posX>
		<posY>514</posY>
		<width>800</width>
		<label>#selecteditem</label>
		<font>fontB20</font>
		<visible>[facadeview.list | facadeview.album | facadeview.filmstrip | facadeview.smallicons | facadeview.largeicons | facadeview.playlist]+Control.IsVisible(50)</visible>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
	</control>

	<control>
		<description>Number of Files Label</description>
		<type>label</type>
		<id>1</id>
		<label>| #currentmodule: #itemcount</label>
		<posX>242</posX>
		<posY>99</posY>
		<align>left</align>
		<font>AvalonLight12</font>
		<textcolor>ffffff</textcolor>
		<visible>[facadeview.list | facadeview.album | facadeview.filmstrip | facadeview.smallicons | facadeview.largeicons | facadeview.playlist]+Control.IsVisible(50)</visible>
		<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
	</control>

</controls>
</window>
