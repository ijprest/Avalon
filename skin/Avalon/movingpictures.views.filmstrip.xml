<?xml version="1.0" encoding="utf-8"?>
<window>
<controls>

	<!--            :: FILMSTRIP VIEW ::            -->
	
	<control>
		<description>Movie Title Label</description>
		<type>fadelabel</type>
		<id>1</id>
		<posX>680</posX>
		<posY>945</posY>
		<width>1160</width>
		<label>#MovingPictures.SelectedMovie.title</label>
		<font>fontB20</font>
		<visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="fade" time="450" reversible="false">visible</animation>
	</control>
	
	<control>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="fade" time="450" reversible="false">visible</animation>
		<type>imagelist</type>
		<id>101</id>
		<posX>1830</posX>
		<posY>942</posY>
		<width>185</width>
		<height>29</height>
		<textureWidth>28</textureWidth>
		<textureHeight>27</textureHeight>
		<subitems>
		<subitem>starblue.png</subitem>
		<subitem>starwhite.png</subitem>
		</subitems>
		<orientation>horizontal</orientation>
		<align>right</align>
		<imagesToDraw>5</imagesToDraw>
		<percentage>#MovingPictures.SelectedMovie.score.rounded</percentage>
		<visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
	</control>
	
	<control>
		<animation effect="slide" start="0,-60" end="0,0" tween="quadratic" easing="in" time="250" delay="400">WindowOpen</animation>
		<animation effect="slide" start="0,0" end="0,-60" tween="quadratic" easing="in" time="250" delay="100">WindowClose</animation>
		<id>1</id>
		<type>image</type>
		<posX>1000</posX>
		<posY>0</posY>
		<texture>hiddenmenu_tab_up.png</texture>
		<visible>facadeview.filmstrip+Control.HasFocus(50)</visible>
	</control>	

</controls>
</window>