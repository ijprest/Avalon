<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <id>5555</id>
    <defaultcontrol>2</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <define>#header.label:ClickMania</define>
    <controls>
        <control>
            <description>Background</description>
            <type>image</type>
            <posX>0</posX>
            <posY>0</posY>
            <width>1366</width>
            <height>768</height>
            <texture>background.png</texture>
        </control>
        <control>
            <id>1</id>
            <type>label</type>
            <posX>552</posX>
            <posY>30</posY>
            <width>500</width>
            <height>66</height>
            <font>Segoe Light40</font>
            <textcolor>ff6aa5cb</textcolor>
            <label>#header.label</label>
            <animation effect="Fade" time="100">WindowOpen</animation>
            <animation effect="Fade" time="100">WindowClose</animation>
        </control>
        <import>common.time.xml</import>
        <control>
            <type>group</type>
            <visible>![control.hasfocus(2)|control.hasfocus(8)|control.hasfocus(4)|control.hasfocus(6)]</visible>
            <dimColor>ffffffff</dimColor>
            <animation effect="Fade" time="250">VisibleChange</animation>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
            <control>
                <id>201</id>
                <description>Score: label</description>
                <type>label</type>
                <posX>70</posX>
                <posY>295</posY>
                <label>19005</label>
            </control>
            <control>
                <id>202</id>
                <description>Score</description>
                <type>label</type>
                <posX>290</posX>
                <posY>295</posY>
                <align>RIGHT</align>
                <label>#cm_score</label>
            </control>
            <control>
                <id>203</id>
                <description>Highscore: label</description>
                <type>label</type>
                <posX>70</posX>
                <posY>380</posY>
                <label>19008</label>
            </control>
            <control>
                <id>204</id>
                <description>Highscore</description>
                <type>label</type>
                <posX>290</posX>
                <posY>380</posY>
                <align>RIGHT</align>
                <label>#cm_highscore</label>
            </control>
        </control>
        <control>
            <type>group</type>
            <dimColor>ffffffff</dimColor>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
            <control>
                <id>10</id>
                <description>ClickMania control</description>
                <type>clickmania</type>
                <onleft>2</onleft>
                <onright>2</onright>
                <onup>2</onup>
                <ondown>2</ondown>
                <colordiffuse>60ffffff</colordiffuse>
                <posX>621</posX>
                <posY>120</posY>
                <width>528</width>
                <height>600</height>
                <nextblocky>100</nextblocky>
                <texturefocus>panel_focus.png</texturefocus>
                <texture>panel_focus.png</texture>
                <font>font18</font>
                <textcolor>ff000000</textcolor>
                <onback>2</onback>
            </control>
        </control>
        <control>
            <description>button group</description>
            <type>group</type>
            <posX>71</posX>
            <posY>121</posY>
            <layout>StackLayout</layout>
            <animation effect="Fade" time="250">WindowOpen</animation>
            <animation effect="Fade" time="250">WindowClose</animation>
            <control>
                <id>2</id>
                <description>New Game</description>
                <type>button</type>
                <onright>10</onright>
                <onup>17</onup>
                <ondown>8</ondown>
                <label>19002</label>
                <textalign>RIGHT</textalign>
            </control>
            <control>
                <id>8</id>
                <description>Take back last move</description>
                <type>button</type>
                <onright>10</onright>
                <onup>2</onup>
                <ondown>4</ondown>
                <label>Take back</label>
                <textalign>RIGHT</textalign>
            </control>
            <control>
                <id>4</id>
                <description>Sounds</description>
                <type>togglebutton</type>
                <onright>10</onright>
                <onup>8</onup>
                <ondown>6</ondown>
                <label>19004</label>
                <textalign>RIGHT</textalign>
            </control>
            <control>
                <id>6</id>
                <description>Keyboard</description>
                <type>togglebutton</type>
                <onright>10</onright>
                <onup>4</onup>
                <ondown>2</ondown>
                <label>Keyboard</label>
                <textalign>RIGHT</textalign>
            </control>
        </control>
    </controls>
</window>
