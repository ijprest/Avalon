<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>    
	<control>
		<description>background listview</description>
		<type>image</type>
		<id>1</id>
		<posX>0</posX>
        <posY>0</posY>
		<width>1920</width>
		<height>1080</height>
		<texture>overlay_long.png</texture>
		<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)|control.isvisible(1239)]+facadeview.list</visible>
	</control>
	
	<control>
		<description>Viewport List</description>
		<type>image</type>
		<id>1</id>
		<posX>1</posX>
		<posY>164</posY>
		<width>1893</width>
		<height>755</height>
		<texture>viewport_long.png</texture>
		<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)|control.isvisible(1239)]+facadeview.list</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
		<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>
	
	<control>
		<description>Fanart Overlay (Filmstrip)</description>
		<type>image</type>
		<id>1</id>
		<posX>0</posX>
        <posY>0</posY>
		<width>1920</width>
		<height>1080</height>
		<texture>filmstrip_overlay.png</texture>
		<visible>facadeview.filmstrip</visible>
		<animation effect="fade" time="0">WindowClose</animation>
	</control>
	
	<control>
		<description>Viewport Filmstrip</description>
		<type>image</type>
		<id>1</id>
		<posX>0</posX>
		<posY>164</posY>
		<width>1893</width>
		<height>644</height>
		<texture>filmstrip_viewport.png</texture>
		<visible>facadeview.filmstrip</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
		<animation effect="slide" time="250" start="-1890,0">WindowOpen</animation>
		<animation effect="slide" time="250" end="-1890,0">WindowClose</animation>
	</control>
  </controls>
</window>