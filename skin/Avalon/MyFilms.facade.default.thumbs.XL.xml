<?xml version="1.0" encoding="utf-8"?>
<!--
This file should contain the facade view
-->
<window>
<controls>

	<control>
			<animation effect="fade" start="0" end="100" time="300" delay="350">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="0" delay="0">WindowClose</animation>
			<type>facadeview</type>
			<id>50</id>
		
			<control>
				<description>Movie List</description>
				<type>listcontrol</type>
				<id>50</id>
				<onleft>2</onleft>
				<onright>2</onright>
				<scrollOffset>1</scrollOffset>
				<posX>1166</posX>
				<posY>236</posY>
				<height>550</height>
				<width>684</width>
				<textXOff>50</textXOff>
				<textureHeight>55</textureHeight>
				<textureFocus>listcontrol_item_selected_small.png</textureFocus>
				<textureNoFocus>-</textureNoFocus>
				<dimColor>ffffffff</dimColor>
			</control>

			<control>
				<description>Filmstrip view</description>
				<type>filmstrip</type>
				<dimColor>90ffffff</dimColor>
				<id>50</id>
				<scrollOffset>3</scrollOffset>
				<folderPrefix></folderPrefix>
				<folderSuffix></folderSuffix>
				<posX>70</posX>
				<posY>250</posY>
				<width>1920</width>
				<height>768</height>
				<onup>2</onup>
				<ondown>2</ondown>
				<onleft>50</onleft>
				<onright>50</onright>
				<thumbWidth>327</thumbWidth>
				<thumbHeight>463</thumbHeight>
				<thumbPosX>0</thumbPosX>
				<thumbPosY>0</thumbPosY>
				<itemWidth>355</itemWidth>
				<itemHeight>463</itemHeight>
				<textureWidth>327</textureWidth>
				<textureHeight>463</textureHeight>
				<textYOff>-2000</textYOff>
				<imageFolderFocus>-</imageFolderFocus>
				<frame>-</frame>
				<frameFocus>-</frameFocus>
				<background>-</background>
				<thumbs flipY="true" diffuse="Thumb_Mask_test.png" mask="video_filmstrip_mask.png"></thumbs>
				<showFrame>yes</showFrame>
				<showFolder>no</showFolder>
				<showBackGround>no</showBackGround>
				<showInfoImage>no</showInfoImage>
				<thumbAnimation effect="zoom" acceleration="-2" start="100,100" reversible="false" end="108,108" center="0,500" time="200">focus</thumbAnimation>
				<thumbAnimation effect="zoom" start="108,108" reversible="false" end="100,100" center="0,500" time="100">unfocus</thumbAnimation>
			</control>

			<control>
				<description>Thumbnail Panel</description>
				<type>thumbnailpanel</type>
				<id>50</id>
				<posX>55</posX>
				<posY>206</posY>
				<width>1920</width>
				<height>600</height>
				<scrollOffset>1</scrollOffset>
				<folderPrefix></folderPrefix>
				<folderSuffix></folderSuffix>
				<onleft>2</onleft>
				<onright>2</onright>
				<itemWidth>138</itemWidth>
				<itemHeight>190</itemHeight>
				<textureWidth>133</textureWidth>
				<textureHeight>185</textureHeight>
				<thumbWidth>133</thumbWidth>
				<thumbHeight>185</thumbHeight>
				<thumbPosX>0</thumbPosX>
				<thumbPosY>0</thumbPosY>
				<itemWidthBig>206</itemWidthBig>
				<itemHeightBig>290</itemHeightBig>
				<thumbWidthBig>201</thumbWidthBig>
				<thumbHeightBig>280</thumbHeightBig>
				<textureWidthBig>201</textureWidthBig>
				<textureHeightBig>280</textureHeightBig>
				<thumbPosXBig>0</thumbPosXBig>
				<thumbPosYBig>0</thumbPosYBig>
				<zoomXPixels>0</zoomXPixels>
				<zoomYPixels>0</zoomYPixels>
				<hideUnfocusTexture>no</hideUnfocusTexture>
				<keepaspectratio>no</keepaspectratio>
				<renderFocusText>no</renderFocusText>
				<renderUnfocusText>no</renderUnfocusText>
				<frameNoFocus>video_thumb_nofocus.png</frameNoFocus>
				<frameFocus>video_thumb_focus.png</frameFocus>
				<textureMask>video_thumb_mask.png</textureMask>
				<shadowAngle>90</shadowAngle>
    			<shadowDistance>50</shadowDistance>
				<thumbZoom>no</thumbZoom>
			</control>

	</control>
</controls>
</window>
